<div class="container">

    <div class="cars-container">
        <h1>Cars</h1>
        <div class="row">
            <div class="form-container">
                <form action="/cars" method="GET" id="search-form">

                    <div class="form-group">
                      <label for="daterange">Daterange:</label>
                      <input type="text" class="form-control" id="daterange" name="daterange">
                      <input name="date_from" readonly>
                      <input name="date_to" readonly>
                    </div>

                    <div class="form-group">
                        <label for="seats">Max Seats:</label>
                        <input type="number" class="form-control" id="seats" name="seats" placeholder="seats" value="{{searchFormData.seats}}">
                    </div>

                    <div class="form-group">
                      <label for="price">Max Price:</label>
                      <input type="number" class="form-control" id="price" name="price" placeholder="max price" value="{{searchFormData.price}}">
                    </div>

                    <div class="form-group">
                      <label for="brand">Brand:</label>
                      <input type="brand" class="form-control" id="brand" name="brand" placeholder="brand" value="{{searchFormData.brand}}" autocomplete="off">
                    </div>
                    <button type="submit" class="btn btn-success pull-right">SEARCH</button>
                </form>
            </div>
        </div>
        <div class="row">
          <p class="alert alert-danger bookAlertBox">You must login first</p>

          <div id="thumbnailParentParent">
          {{#each cars}}
            <div class="col-sm-6 col-md-4 thumbnailParent">
                <div class="thumbnail">
                    <img src="{{this.image}}" alt="{{this.image}}">
                    <div class="caption">
                        <h3>{{this.brand}}</h3>
                        <p>Model: {{this.model}}</p>
                        <p>Price: {{this.price}}</p>
                        <p>Transmisson: {{this.price}}</p>
                        <p>Seats: {{this.seats}}</p>
                       <form action="/bookings/car/{{this._id}}" method="POST" class="book-form">
                        <button type="submit" class="btn btn-success pull-right">BOOK</button>
                       </form>

                        <p><a href="/cars/{{this._id}}" class="btn btn-primary" role="button">Details</a></p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        </div>
    </div>
</div>
<!-- container -->
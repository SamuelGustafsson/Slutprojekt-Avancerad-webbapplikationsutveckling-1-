
<div class="container">

  <div class="col-md-6 col-md-offset-3">
    <h1>{{title}}</h1>

    {{#if formError}}
      <p class="alert alert-danger">Login failed</p>
    {{/if}}
    {{#if authError}}
      <p class="alert alert-danger">You must login first</p>
    {{/if}}

    <form action="/users/login" method="post">
      <div class="form-group">
        <label for="username">Email:</label>
        <input type="email" class="form-control" id="username" name="username" placeholder="email" value="a@test.com">
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="" value="1">
      </div>
      <button type="submit" class="btn btn-success pull-right">Log in</button>
    </form>
  </div>

</div> <!-- container -->


